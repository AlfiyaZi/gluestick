#!/usr/bin/env node

var spawn = require('cross-spawn').spawn;
var fs = require('fs');

var version = JSON.parse(fs.readFileSync("./package.json")).version;
var tag = "gluestick/gluestick:" + version;

spawn("docker", ["build", "-f", "./docker/Dockerfile", "--force-rm=true", "-t", tag, "--build-arg", "GLUESTICK_VERSION=" + version, "."], {stdio: "inherit", env: Object.assign({}, process.env)});
spawn("docker", ["push", tag], {stdio: "inherit", env: Object.assign({}, process.env)});
