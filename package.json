{
  "name": "gluestick-packages",
  "scripts": {
    "install:npm": "npm install && lerna bootstrap",
    "install:yarn": "npm install && npm run yarn:install && npm run link",
    "lerna": "lerna",
    "yarn:install": "lerna exec --concurrency=1 -- yarn install",
    "link": "lerna exec --concurrency=99 -- linklocal",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "lint": "eslint .",
    "flow": "flow",
    "ci": "npm run lint && npm run flow && npm run test-coverage",
    "publish": "./scripts/deploy.js"
  },
  "dependencies": {
    "lerna": "2.0.0-beta.37",
    "linklocal": "2.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-polyfill": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "babel-preset-stage-0": "6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "jest": "19.0.0",
    "flow-bin": "^0.38.0"
  },
  "jest": {
    "notify": true,
    "testRegex": ".*/__tests__/.*\\.test\\.js$",
    "setupFiles": [
      "./packages/gluestick/jest/setup.js"
    ]
  }
}
